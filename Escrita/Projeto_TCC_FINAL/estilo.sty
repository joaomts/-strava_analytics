\makeatletter % INÍCIO DO BLOCO ESPECIAL
\newcommand*{\saved@chapter}{}
\let\saved@chapter\chapter
\renewcommand*{\chapter}{%
  \begingroup
  \toks@{\endgroup\saved@chapter}%
  \@ifstar{%
    \toks@\expandafter{\the\toks@*}%
    \final@chapter
  }{\next@chapter}%
}
\newcommand*{\final@chapter}[1]{%
  \the\toks@{#1}%
  \thispagestyle{cabecalhorodape}%
}
\newcommand*{\next@chapter}{%
  \@ifnextchar[{\opt@chapter}{\final@chapter}%
}
\newcommand*{\opt@chapter}{}
\def\opt@chapter[#1]{%
  \toks@\expandafter{\the\toks@[{#1}]}%
  \final@chapter
}

\newenvironment{resumo-portugues}
{
\saved@chapter*{Resumo}
\thispagestyle{empty}
}
{
\cleardoublepage
}

\newenvironment{resumo-ingles}
{
\saved@chapter*{Abstract}
